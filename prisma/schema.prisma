generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:ankush@23@localhost:5432/unified_inbox?schema=public"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  role          Role      @default(VIEWER)
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  notes         Note[]
  messages      Message[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
}

model Account {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  provider     String   @default("credential")
  providerId   String
  accountId    String?       // optional
  password     String?       // for credential-based login
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Allow multiple accounts for same provider/providerId as long as accountId differs
  @@unique([provider, providerId, accountId])
}



model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token        String   @unique
  sessionToken String?
  ipAddress    String?
  userAgent    String?
  expiresAt    DateTime

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}



model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
}

model Team {
  id       String    @id @default(cuid())
  name     String
  members  User[]
  contacts Contact[]
}

model Contact {
  id                String             @id @default(cuid())
  name              String?
  phone             String?
  email             String?
  social            Json?
  messages          Message[]
  notes             Note[]
  // Relations
  teamId            String?
  team              Team?              @relation(fields: [teamId], references: [id])
  scheduledMessages ScheduledMessage[]
}

model Message {
  id        String    @id @default(cuid())
  contactId String
  contact   Contact   @relation(fields: [contactId], references: [id])
  senderId  String?
  sender    User?     @relation(fields: [senderId], references: [id])
  channel   Channel
  direction Direction
  body      String
  mediaUrl  String?
  readBy    String[]  @default([])
  createdAt DateTime  @default(now())
}

model Note {
  id         String     @id @default(cuid())
  userId     String
  contactId  String
  user       User       @relation(fields: [userId], references: [id])
  contact    Contact    @relation(fields: [contactId], references: [id])
  body       String
  visibility Visibility
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model ScheduledMessage {
  id          String         @id @default(cuid())
  contactId   String
  contact     Contact        @relation(fields: [contactId], references: [id])
  channel     Channel
  body        String
  scheduledAt DateTime
  status      ScheduleStatus @default(PENDING)
  createdAt   DateTime       @default(now())
  sentAt      DateTime?
}

enum ScheduleStatus {
  PENDING
  SENT
  CANCELLED
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum Channel {
  SMS
  WHATSAPP
  EMAIL
  TWITTER
  MESSENGER
}

enum Direction {
  INBOUND
  OUTBOUND
}

enum Visibility {
  PUBLIC
  PRIVATE
}
